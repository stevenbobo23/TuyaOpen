config CHIP_CHOICE
    string
    default "esp32s3"

config BOARD_CHOICE
    string
    default "WAVESHARE_ESP32S3_Touch_AMOLED_1.8"

config BOARD_CONFIG
    bool
    default y
    select ENABLE_AUDIO
    select ENABLE_ESP_DISPLAY
    select PLATFORM_FLASHSIZE_16M
    select ENABLE_AUDIO_CODECS
    select ENABLE_ESP32S3_USB_JTAG_ONLY
